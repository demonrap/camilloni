@model IEnumerable<fc.ModelViews.FeaturedModelView>
@if (Model.Count() > 0)
{
    <div class="inner-box wow fadeInDownQuick" data-wow-delay="0.6s">
        <div class="widget-title">
            <h4>Last Products</h4>
        </div>
        <div class="advimg">
            <ul class="featured-list">
                @foreach (var x in Model)
                {
                    <li>
                        <img alt="" src="@x.img">
                        <div class="hover">
                            <a href="@Url.Action("Index", "Detail", new { id = x.id_articolo })"><span>@x.articolo</span></a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
}



<section class="grid-category">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="box-title no-border">
                    <div class="inner">
                        <h3 class="section-title"><span>Browse by</span> Category</h3>
                        <a href="@Url.Action("Index","Category")" class="sell-your-item">
                            <i class="fa fa-th-large"></i> View more
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                @for (int i = 1; i <= 12; i++)
                {
                    <div class="col-md-2 col-sm-3 col-xs-6 f-category wow fadeIn" data-wow-delay="0s">
                        <a href="@Url.Action("Index","Category")">
                            <div class="icon-img">
                                <img src="http://via.placeholder.com/350x350" class="img-responsive" alt="category">
                            </div>
                            <h6>Category count(@i)</h6>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

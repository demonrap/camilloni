@model IEnumerable<fc.ModelViews.FeaturedModelView>
@if (Model.Count() > 0)
{
    <section class="featured-lis">
        <div class="container">
            <div class="row">
                <div class="col-md-12 wow fadeIn" data-wow-delay="0.5s">
                    <h3 class="section-title">@fc.Resources.Resources.homeFeatured</h3>
                    <div id="new-products" class="owl-carousel">
                        @foreach (var x in Model)
                        {
                            <div class="item">
                                <div class="product-item">
                                    <div class="carousel-thumb">
                                        <img src="@x.img" alt="">
                                        <div class="overlay">
                                            <a href="@Url.Action("Index","Detail", new { id = x.id_articolo })"><i class="fa fa-link"></i></a>
                                        </div>
                                    </div>
                                    <a href="#" class="item-name">@x.articolo</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
}


@model IEnumerable<fc.ModelViews.CategoryModelView>
@{ string all = System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en" ? "All Categories" : "Tutte le categorie"; }
<section id="intro" class="section-intro" style="background: url('@Url.Content("~/public/media/site/steam.jpg")') center center no-repeat;">
    <div class="overlay">
        <div class="container">
            <div class="main-text">
                <h1 class="intro-title">@fc.Resources.Resources.searchIntroTitle</h1>
                <p class="sub-title">@fc.Resources.Resources.searchSubTitle</p>
                <!-- Start Search box -->
                <div class="row search-bar">
                    <div class="advanced-search">
                        @using (Html.BeginForm("Index", "Categories", FormMethod.Get, new { @class = "search-form" }))
                        {

                            <div class="col-md-3 col-sm-6 search-col">
                                <div class="input-group-addon search-category-container">
                                    <label class="styled-select">
                                        <select class="dropdown-product selectpicker" name="cat" data-live-search="true">
                                            <option value="0">@all</option>
                                            @foreach (var x in Model)
                                            {
                                                <option value="@x.id_categoria"> @x.descrizione</option>
                                            }
                                        </select>
                                    </label>
                                </div>
                            </div>
                                @*<div class="col-md-3 col-sm-6 search-col">
                                        <div class="input-group-addon search-category-container">
                                            <label class="styled-select location-select">
                                                <select class="dropdown-product selectpicker" name="product-cat">
                                                    <option value="0">All Locations</option>
                                                    <option value="New York">New York</option>
                                                    <option value="California">California</option>
                                                    <option value="Washington">Washington</option>
                                                    <option value="churches">Birmingham</option>
                                                    <option value="Birmingham">Chicago</option>
                                                    <option value="Phoenix">Phoenix</option>
                                                </select>
                                            </label>
                                        </div>
                                    </div>*@
                                <div class="col-md-6 col-sm-6 search-col">
                                    <input class="form-control keyword" name="key" value="" placeholder="@fc.Resources.Resources.searchKey" type="text">
                                    <i class="fa fa-search"></i>
                                </div>
                                <div class="col-md-3 col-sm-6 search-col">
                                    <button class="btn btn-common btn-search btn-block"><strong>@fc.Resources.Resources.searchBuy</strong></button>
                                </div>
                        }
                    </div>
                </div>
                <!-- End Search box -->
            </div>
        </div>
    </div>
</section>
